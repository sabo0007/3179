{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "How Australians study: attendance patterns",
    "subtitle": "Change vs 2023 by category; green = growth, red = decline"
  },
  "width": 720,
  "height": 320,
  "data": { "url": "data/type_of_attendance.csv" },
  "transform": [{ "calculate": "datum.Change_Percent", "as": "delta" }],
  "layer": [
    {
      "mark": { "type": "rule", "color": "#98a2b3" },
      "encoding": { "x": { "value": 0 } }
    },
    {
      "mark": { "type": "bar", "cornerRadiusEnd": 2 },
      "encoding": {
        "y": { "field": "Category", "type": "nominal", "title": null },
        "x": { "field": "delta", "type": "quantitative", "title": "Change vs 2023 (%)", "scale": { "domain": [-6, 12] } },
        "color": { "condition": { "test": "datum.delta >= 0", "value": "#2a9d8f" }, "value": "#e76f51" },
        "column": { "field": "Type", "title": null },
        "tooltip": [
          { "field": "Type" }, { "field": "Category" },
          { "field": "delta", "title": "Change (%)", "format": ".1f" },
          { "field": "Count", "title": "Enrolments (2024)", "format": "," }
        ]
      }
    }
  ],
  "config": {
    "view": { "stroke": null },
    "axis": { "labelFont": "Inter, Segoe UI, Roboto, Arial, sans-serif", "titleFont": "Inter, Segoe UI, Roboto, Arial, sans-serif", "labelColor": "#0b1520", "titleColor": "#0b1520" },
    "legend": { "labelFont": "Inter, Segoe UI, Roboto, Arial, sans-serif", "titleFont": "Inter, Segoe UI, Roboto, Arial, sans-serif" },
    "title": { "font": "Inter, Segoe UI, Roboto, Arial, sans-serif", "color": "#0b1520", "anchor": "start", "fontSize": 18, "subtitleFontSize": 12, "subtitleColor": "#475467" }
  }
}